# SwanStudios Environment Variables
# Copy this file to .env and adjust as needed

# Node Environment
NODE_ENV=development

# Database Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASS=postgres
PG_DB=swanstudios

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=30d

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:5173
FRONTEND_ORIGINS=http://localhost:5173,http://localhost:3000

# CORS Settings
# Add additional origins if needed, comma-separated

# Email Configuration (for Nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@swanstudios.com

# SendGrid Configuration (optional)
# Leave blank to disable SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@swanstudios.com

# Twilio Configuration (optional)
# Leave blank to disable Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Stripe Configuration (optional)
# Leave blank to disable Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Frontend Stripe Configuration
# Publishable key for frontend (must match secret key account)
VITE_STRIPE_PUBLISHABLE_KEY=

# Payment Strategy Selection
# Options: 'checkout' (redirect), 'elements' (embedded), 'manual' (offline)
# Default: 'checkout'
PAYMENT_STRATEGY=checkout

# Admin Configuration
ADMIN_EMAILS=admin@swanstudios.com
ADMIN_PHONES=+15551234567

# Logging
LOG_LEVEL=info

# MCP (Model Context Protocol) Configuration
# Workout Generation MCP Server
WORKOUT_MCP_URL=http://localhost:8000
WORKOUT_MCP_ENABLED=true

# Gamification MCP Server
GAMIFICATION_MCP_URL=http://localhost:8002
GAMIFICATION_MCP_ENABLED=true

# YOLO AI Form Analysis MCP Server (Future)
YOLO_MCP_URL=http://localhost:8001
YOLO_MCP_ENABLED=false

# Food Scanner MCP Server (Future)
FOOD_SCANNER_MCP_URL=http://localhost:8003
FOOD_SCANNER_MCP_ENABLED=false
